<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
">

    <bean id="pizzaService" class="com.ilkun.delivery.service.SimplePizzaService">
        <constructor-arg ref="pizzaRepository" />
    </bean>
    <bean id="orderService" class="com.ilkun.delivery.service.SimpleOrderService">
        <constructor-arg ref="orderRepository" />
        <constructor-arg ref="pizzaService" />
        <constructor-arg ref="discountManager" />
    </bean>
    <bean id="customerService" class="com.ilkun.delivery.service.SimpleCustomerService">
        <constructor-arg index="0" ref="customerRepository" />
        <constructor-arg index="1" ref="addressService" />
        <constructor-arg index="2" ref="bonusCardService" />
    </bean>
    <bean id="addressService" class="com.ilkun.delivery.service.SimpleAddressService">
        <constructor-arg ref="addressRepository" />
    </bean>
    <bean id="bonusCardService" class="com.ilkun.delivery.service.SimpleBonusCardService">
        <constructor-arg ref="bonusCardRepository" />
    </bean>

    <bean name="discountManager" class="com.ilkun.delivery.domain.SimpleDiscountManager" />

</beans>
